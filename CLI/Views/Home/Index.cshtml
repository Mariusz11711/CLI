@model CLI.Models.PaymentParametersModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <style>
        body {
            font-weight: 600;
        }
        .input-validation-error {
            border: 1px solid red;
        }
        li{
            color: red;
        }
        .panel-body {
            background: #808080;
        }
        #mandatory {
            border: 1px solid #00ffff;
            padding: 40px;
        }
        #optional {
            border: 1px solid#b6ff00;
            padding: 40px;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Welcome in CLI Banking Challenge</h1>
    </div>

    <div class="panel panel-success">
        <div class="panel-body">
            <form asp-action="Index" method="post">
                <div asp-validation-summary="All"></div>
                <div id="mandatory">
                    <div class="form-group col-2">
                        <label asp-for="Loan_amount">Loan amount</label>
                        <input class="form-control" type="number" min="1000" max="1000000000" asp-for="Loan_amount" />
                    </div>
                    <div class="form-group col-2">
                        <label asp-for="Duration_of_loan">Duration of loan</label>
                        <input class="form-control" type="number" min="1" max="50" asp-for="Duration_of_loan" />
                    </div>
                </div>
                <div id="optional">
                    <div class="form-group col-4">
                        <input type="checkbox" asp-for="Annual_Interest_rate" />
                        <label asp-for="Annual_Interest_rate">Annual Interest rate</label>
                    </div>
                    <div class="form-group col-4">
                        <input type="checkbox" asp-for="Interest_rate_calculated_monthly" />
                        <label asp-for="Interest_rate_calculated_monthly">Interest rate calculated monthly</label>
                    </div>
                    <div class="form-group col-4">
                        <input type="checkbox" asp-for="Administration_fee" />
                        <label asp-for="Administration_fee">Administration fee (one-time): 1% or 10000 kr. whichever is lowest</label>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">Wyslij</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
